#!/bin/bash
# bin/compile <build-dir> <cache-dir> <env-dir>

if [ $(uname) == Darwin ]; then
    sed() { command sed -l "$@"; }
else
    sed() { command sed -u "$@"; }
fi

indent() {
  sed "s/^/       /"
}

echo "-----> Found .release file"

while read line; do
  if [ ! -z line ]; then 
    echo "Provisioning $line" | indent
    
    # Download
    curl -o $1/binary $line
    exit $?
  fi
done < $1/.release
