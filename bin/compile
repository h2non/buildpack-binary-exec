#!/bin/bash
# bin/compile <build-dir> <cache-dir> <env-dir>

if [ $(uname) == Darwin ]; then
    sed() { command sed -l "$@"; }
else
    sed() { command sed -u "$@"; }
fi

indent() {
  sed "s/^/       /"
}

echo "-----> Found .release file"

url=$(head -n 1 $1/.release)
echo "Provisioning $url" | indent

# Download the binary
curl -L --silent -o $1/app.bin $url
exit $?
