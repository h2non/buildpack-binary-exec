#!/bin/bash
# bin/compile <build-dir> <cache-dir> <env-dir>

if [ $(uname) == Darwin ]; then
    sed() { command sed -l "$@"; }
else
    sed() { command sed -u "$@"; }
fi

indent() {
  sed "s/^/       /"
}

echo "-----> Found .release file"

while read -r line; do
  echo "Provisioning $line" | indent

  # Download the binary
  curl -L --silent -o $1/app.bin $line
  exit $?
done < $1/.release
